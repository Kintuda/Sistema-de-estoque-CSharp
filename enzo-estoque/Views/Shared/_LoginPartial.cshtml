@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right" style="display:flex;flex-direction:row;">
        <a class="btn btn-primary btn-sm" role="button" href='@Url.Action("Login","Account", new { id = "loginLink"})' style="margin-right:10px">Login</a>
        <a class="btn btn-success btn-sm" role="button" href='@Url.Action("Register","Account", new { id = "registerLink"})'>Registrar</a>
    </ul>
}

