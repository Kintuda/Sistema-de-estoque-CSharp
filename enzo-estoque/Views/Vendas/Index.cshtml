@model IEnumerable<enzo_estoque.Models.Venda>

@{
    ViewBag.Title = "Index";
}

<h2>Vendas <a class="btn btn-sm btn-secondary" role="button" href='@Url.Action("Create","Vendas", new { id = "vendasLink"})'>Criar</a></h2>

<table class="table">
    <tr>
        <th>
            Descrição do produto
        </th>
        <th>
            Descrição
        </th>
        <th>
            Valor
        </th>
        <th>
            Possui desconto
        </th>
        <th>
            Valor do desconto
        </th>
        <th>
            Quantidade
        </th>
        <th>
            Endereço
        </th>
        <th>
            Situação
        </th>
        <th>
            Tipo de pagamento
        </th>
        <th>
            Data da venda
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Produto.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Valor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Desconto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ValorDesconto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantidade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EnderecoDeEntrega)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Situacao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pagamento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataVenda)
        </td>
        <td>
            <a class="btn btn-sm btn-secondary" role="button" href='@Url.Action("Edit","Vendas", new { id = item.ID})'> <span data-feather="edit">Editar</span></a>
            <a class="btn btn-sm btn-secondary" role="button" href='@Url.Action("Details","Vendas", new { id = item.ID})'> <span data-feather="menu">Detalhes</span></a>
            <a class="btn btn-sm btn-secondary" role="button" href='@Url.Action("Delete","Vendas", new { id = item.ID})'> <span data-feather="trash">Detalhes</span></a>
        </td>
    </tr>
}

</table>
